<div class=item-buttons>
  {{#bs-button-group}}
    {{#if task.isFavorite}}
      <button {{action 'toggleFavorite'}}
              class="btn btn-warning btn-sm">
        Un-Favorite
      </button>
    {{else}}
      <button {{action 'toggleFavorite'}}
              class="btn btn-warning btn-sm">
        Favorite
      </button>
    {{/if}}
    <button {{action 'finishTask'}}
            class="btn btn-primary btn-sm">
      Finish
    </button>
    <button {{action 'deleteTask'}}
            class="btn btn-danger btn-sm">
      Delete
    </button>
  {{/bs-button-group}}
</div>
